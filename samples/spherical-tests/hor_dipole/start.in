!  -*-f90-*-  (for Emacs)    vim:set filetype=fortran:  (for vim)
!
! Convection in a spherical wedge
!
&init_pars
  coord_system='spherical'
  lperi=F, F, T
  lpole=F, T, F
  xyz0=0.7, 0.0
  xyz1=1.0, 3.14158867730
  bcx='spr','spr','spr'
  bcy='pp' , 'ap', 'ap'
/
&magnetic_init_pars
  initaa='horizontal_dipole'
  amplaa=1.
/
