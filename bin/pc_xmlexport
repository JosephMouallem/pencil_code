    `module INITCOND_SPEC`
    `module SHOCK`
    `module TESTFIELD`
    `module TESTFLOW`
    `module TESTPERTURB`
    `module GRAVITY`
    `module FORCING`
    `module SHEAR`
    `module TIMEAVG`
    `module SPECIAL`
    `module PARTICLES`
    `module PARTICLES_SUB`
    `module PARTICLES_MAIN`
    `module PARTICLES_RADIUS`
    `module SHOCK_PROFILE`
    `module SHOCK_FINDER`
  </moduleinfo>
</buildinfo>
EOF
