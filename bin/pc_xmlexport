[ $# -gt 0 ] || (usage_from_header $IAM; exit 1)
while [ $# -gt 0 ]
do
  case $1 in
  -e)
    eval "$2"
    shift
  ;;
  -h)
    usage_from_header $IAM
    exit 1
  ;;
  -?)
    usage_from_header $IAM
    exit 1
  ;;
  --help)
    usage_from_header $IAM
    exit 1
  ;;
  buildinfo)
    flag_buildinfo=1
  ;;
  --)
    shift
    break
  ;;
  *)
  echo UNRECOGNISED PARAMETER
  usage_from_header $IAM
  exit 1
  ;;
  esac

  shift
done

[ $flag_buildinfo ] && buildinfo
